<UserControl x:Class="MangasMVVM.Views.RepertorioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MangasMVVM.Views" xmlns:viewmodel="clr-namespace:MangasMVVM.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MangasViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="730">
    <UserControl.DataContext>
        <viewmodel:MangasViewModel x:Name="mvm"></viewmodel:MangasViewModel>
    </UserControl.DataContext>
    <ListBox x:Name="listaMangaRepertorio" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="#F8A1D1" SelectedItem="{Binding Manga}" ItemsSource="{Binding Lista}">
       <ListBox.ContextMenu>
            <ContextMenu>
                  <MenuItem Command="{Binding ShowCommand}" CommandParameter="Editar" Header="Editar"></MenuItem>
                  <MenuItem Click="MenuItem_Click" Header="Eliminar"></MenuItem>                      
            </ContextMenu>
                    
        </ListBox.ContextMenu> 
        <ListBox.ItemsPanel>
            
            <ItemsPanelTemplate>
                <WrapPanel></WrapPanel>
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
        
        <StackPanel>
            <Image Height="200" Source="{Binding Manga.Imagen}"></Image>
            <Label HorizontalAlignment="Center" FontSize="18" Content="{Binding Manga.Titulo}"></Label>
