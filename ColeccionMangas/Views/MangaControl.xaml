<UserControl x:Class="MangasMVVM.Views.MangaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MangasMVVM.Views" xmlns:viewmodel="clr-namespace:MangasMVVM.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MangasViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   
    <StackPanel>
            <Image Height="200" Source="{Binding Imagen}" Margin="5"></Image>
            <Label HorizontalAlignment="Center" FontSize="18" Foreground="White" Margin="5"  FontWeight="Bold" Content="{Binding Titulo}"></Label>
     </StackPanel>
</UserControl>
